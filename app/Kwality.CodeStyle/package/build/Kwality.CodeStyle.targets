<Project>
  <!--  Copy the config files from the NuGet package. -->
  <Target Name="CopyConfigFiles" BeforeTargets="BeforeBuild">
    <Copy SourceFiles="$(MSBuildThisFileDirectory)../content/config/.editorconfig" DestinationFolder="$(ProjectDir)" SkipUnchangedFiles="true" />
    <Copy SourceFiles="$(MSBuildThisFileDirectory)../content/config/.globalconfig" DestinationFolder="$(ProjectDir)" SkipUnchangedFiles="true" />
  </Target>


  <!--  Copy the GIT files from the NuGet package. -->
  <Target Name="CopyGitFiles" BeforeTargets="BeforeBuild">
    <Copy SourceFiles="$(MSBuildThisFileDirectory)../content/GIT/.gitignore" DestinationFolder="$(ProjectDir)" SkipUnchangedFiles="true" />
  </Target>

  <!--  Copy the (Core) PowerShell script(s) from the NuGet package. -->
  <Target Name="CopyCorePowerShellScript" BeforeTargets="BeforeBuild">
    <Copy SourceFiles="$(MSBuildThisFileDirectory)../content/scripts/build.ps1" DestinationFolder="$(ProjectDir)/.Kwality.CodeStyle/scripts" SkipUnchangedFiles="true" />
    <Copy SourceFiles="$(MSBuildThisFileDirectory)../content/scripts/format.ps1" DestinationFolder="$(ProjectDir)/.Kwality.CodeStyle/scripts" SkipUnchangedFiles="true" />
  </Target>

  <!--  Copy the (Test) PowerShell script(s) from the NuGet package. -->
  <Target Name="CopyFiles" BeforeTargets="BeforeBuild" Condition="$(MSBuildProjectName.EndsWith('.Tests'))">
    <Copy SourceFiles="$(MSBuildThisFileDirectory)../content/scripts/mutate.ps1" DestinationFolder="$(ProjectDir)/.Kwality.CodeStyle/scripts" SkipUnchangedFiles="true" />
    <Copy SourceFiles="$(MSBuildThisFileDirectory)../content/scripts/cover.ps1" DestinationFolder="$(ProjectDir)/.Kwality.CodeStyle/scripts" SkipUnchangedFiles="true" />
  </Target>
</Project>
